{
  "version": "2.0",
  "project": {
    "name": "specweave",
    "version": "1.0.1"
  },
  "pluginAutoLoad": {
    "enabled": true,
    "suggestOnly": false
  },
  "multiProject": {
    "enabled": true
  },
  "billing": {
    "planType": "subscription",
    "monthlyAmount": 200
  },
  "adapters": {
    "default": "claude"
  },
  "repository": {
    "provider": "local"
  },
  "issueTracker": {
    "provider": "github"
  },
  "sync": {
    "enabled": true,
    "preset": "bidirectional",
    "autoSync": true,
    "settings": {
      "canUpsertInternalItems": true,
      "canUpdateExternalItems": true,
      "canUpdateStatus": true,
      "autoSyncOnCompletion": true
    },
    "github": {
      "enabled": true,
      "owner": "anton-abyzov",
      "repo": "specweave"
    },
    "jira": {
      "enabled": true,
      "domain": "antonabyzov.atlassian.net",
      "projectKey": "WTTC"
    },
    "ado": {
      "enabled": true,
      "organization": "EasyChamp",
      "project": "SpecWeaveSync"
    }
  },
  "hooks": {
    "post_task_completion": {
      "sync_tasks_md": true,
      "external_tracker_sync": true
    },
    "post_increment_planning": {
      "auto_create_github_issue": true,
      "sync_living_docs": true
    },
    "post_increment_done": {
      "sync_living_docs": true,
      "sync_to_github_project": true,
      "close_github_issue": true
    }
  },
  "auto": {
    "enabled": true,
    "maxRetries": 20,
    "requireTests": true,
    "requireValidation": true,
    "requireJudgeLLM": false,
    "skipQualityGates": false
  },
  "testing": {
    "defaultTestMode": "TDD",
    "tddEnforcement": "strict",
    "defaultCoverageTarget": 90,
    "coverageTargets": {
      "unit": 95,
      "integration": 90,
      "e2e": 100
    }
  },
  "documentation": {
    "directories": [
      ".specweave/docs"
    ],
    "publicSitePath": "repositories/anton-abyzov/specweave/docs-site",
    "preview": {
      "enabled": false,
      "autoInstall": false,
      "port": 3015,
      "openBrowser": true,
      "theme": "default",
      "excludeFolders": [
        "legacy",
        "node_modules"
      ]
    }
  },
  "language": "en",
  "translation": {
    "enabled": false,
    "languages": [
      "en"
    ],
    "primary": "en",
    "method": "manual",
    "preserveFrameworkTerms": true,
    "scope": {
      "livingDocs": false,
      "externalSync": false,
      "incrementSpecs": false
    },
    "keepEnglishOriginals": false
  },
  "lsp": {
    "enabled": true,
    "autoInstallPlugins": true,
    "marketplace": "boostvolt/claude-code-lsps"
  },
  "planning": {
    "deepInterview": {
      "enabled": true,
      "enforcement": "strict",
      "minQuestions": 5,
      "categories": [
        "architecture",
        "integrations",
        "ui-ux",
        "performance",
        "security",
        "edge-cases"
      ]
    }
  },
  "limits": {
    "maxActiveIncrements": 3,
    "hardCap": 7,
    "allowEmergencyInterrupt": true
  },
  "umbrella": {
    "enabled": true,
    "childRepos": [
      {
        "id": "specweave",
        "path": "repositories/anton-abyzov/specweave",
        "name": "specweave",
        "prefix": "SPE",
        "sync": {
          "github": { "owner": "anton-abyzov", "repo": "specweave" },
          "jira": { "projectKey": "WTTC" }
        }
      },
      {
        "id": "vskill",
        "path": "repositories/anton-abyzov/vskill",
        "name": "vskill",
        "prefix": "VSK",
        "sync": {
          "github": { "owner": "anton-abyzov", "repo": "vskill" }
        }
      },
      {
        "id": "vskill-platform",
        "path": "repositories/anton-abyzov/vskill-platform",
        "name": "vskill-platform",
        "prefix": "VPL",
        "sync": {
          "github": { "owner": "anton-abyzov", "repo": "vskill-platform" }
        }
      }
    ]
  }
}